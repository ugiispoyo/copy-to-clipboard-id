{
    "compilerOptions": {
        "noEmitOnError": true,
        "lib": ["dom", "es5", "es6"],
        "strict": true,
        "esModuleInterop": false,
        "outDir": "dist",
        "rootDir": "./",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
